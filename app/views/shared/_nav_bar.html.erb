<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<ul class="nav nav-tabs">
				<li class="active?">
					<%= link_to "Home", root_path %>
				</li>
				<li class="active?">
					<%= link_to "Products", posts_path %>
				</li>
				<li class="active?">
					<%= link_to "Shopping Cart", cart_path %>
