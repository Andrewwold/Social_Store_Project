<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Product Description</th>
      <th>image</th>
      <th>Date</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.product_name %></td>
        <td><%= post.product_description %></td>
        <td><%= image_tag(post.image.profile_size.url) %></td>
        <td><%= post.date %></td>
        <td><%= post.price %></td>
        <td><%= post.quantity %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><a href= "/cart/<%= post.id %>"> Add To Cart</a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_post_path %>
